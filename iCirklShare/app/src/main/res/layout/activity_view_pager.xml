<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.urfx.activity.TaketourActivity">




    <android.support.v4.view.ViewPager

        android:id="@+id/viewpager"

        android:layout_width="fill_parent"

        android:layout_height="fill_parent" />

<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:id="@+id/bt_cross"
    android:padding="15dp"
    android:layout_margin="5dp"
    android:visibility="invisible"
    android:background="@drawable/cross_black"
    />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/one"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_textview_blue" />


            <TextView
                android:id="@+id/two"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_textview_white" />


            <TextView
                android:id="@+id/three"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_textview_white" />


</LinearLayout>

</RelativeLayout>