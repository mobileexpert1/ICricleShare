<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".SplashActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/main_logo" />

            <com.icrklshare_Helper.custom.TextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:textSize="20dp"
                android:text="Enter registered email"
                android:textColor="@color/hint_color" />

            <com.icrklshare_Helper.custom.TextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="16dp"
                android:text="To retrieve your password.pleaase enter your registered email."
                android:textColor="@color/hint_color" />

            <com.icrklshare_Helper.custom.EditText_Roboto_Regular
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/back_line"
                android:gravity="center"
                android:hint="Email"
         android:paddingBottom="10dp"
                android:textColor="#ffffff"
                android:textColorHint="@color/hint_color"
                android:textSize="18dp" />


            <com.icrklshare_Helper.custom.Button_Roboto_Regular
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector"
                android:text="Submit"
                android:textColor="#ffffff"
                android:layout_marginRight="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:textSize="20dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
